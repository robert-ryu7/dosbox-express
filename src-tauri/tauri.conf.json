{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "dosbox-express",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "open": true,
        "message": true,
        "confirm": true
      },
      "shell": {
        "all": true
      },
      "path": {
        "all": true
      },
      "process": {
        "exit": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": false,
      "category": "Entertainment",
      "shortDescription": "DOSBox frontend built using Tauri.",
      "copyright": "Copyright Â© 2023 SolidDEV Robert Balcerowicz",
      "publisher": "SolidDEV Robert Balcerowicz",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "org.solid-dev.dosbox-express",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": {
        "default-src": [
          "'self'"
        ],
        "style-src": [
          "'self'",
          "'unsafe-inline'",
          "https://fonts.googleapis.com"
        ],
        "img-src": [
          "'self'",
          "data:"
        ],
        "font-src": [
          "'self'",
          "https://fonts.gstatic.com"
        ]
      }
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "DOSBox Express",
        "minWidth": 640,
        "minHeight": 480,
        "width": 800,
        "height": 600
      }
    ]
  }
}